<?xml version="1.0" encoding="UTF-8"?>
<local:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   xmlns:local="clr-namespace:BodyReportMobile.Presenter.Pages"
             xmlns:localcontrol="clr-namespace:BodyReportMobile.Presenter.Framework.Controls"
             x:Class="BodyReportMobile.Presenter.Pages.MainPage"
					   Title="{Binding TitleLabel}">

  <ContentPage.BackgroundColor>
    <OnPlatform x:TypeArguments="Color"
                iOS="#6DBEE3"/>
  </ContentPage.BackgroundColor>

  <ContentPage.Content>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <StackLayout Grid.Row="0" Padding="4,4,4,4">
        <localcontrol:CircleImage BorderColor="#add8e6" FillColor="Olive" BorderThickness="3" HeightRequest="150" WidthRequest="150"
                                Aspect="AspectFill" HorizontalOptions="Center" Source="{Binding UserProfilImage}"/>
        

      </StackLayout>
        <TableView  Grid.Row="1" x:Name="tableView" Intent="Settings" HasUnevenRows="true" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <TableRoot>
          <TableSection Title="{Binding MenuLabel}">
            <localcontrol:TouchViewCell x:Name="TrainingJournalCell" Tapped="OnCellTapped"
              Value="{Binding TrainingJournalLabel}"
              IsIndicatorVisible="true" />
          </TableSection>
          <TableSection Title="{Binding ConfigurationLabel}">
            <localcontrol:TouchViewCell x:Name="ChangeLanguageCell" Tapped="OnCellTapped"
              Value="{Binding ChangeLanguageLabel}"
              Image="{Binding LanguageFlagImageSource}"
              IsImageVisible="true"
              IsIndicatorVisible="true" />
          </TableSection>
        </TableRoot>
      </TableView>

      <AbsoluteLayout Grid.RowSpan="2">
        <ActivityIndicator AbsoluteLayout.LayoutFlags="PositionProportional"
                           AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1" IsRunning="{Binding ActionIsInProgress}" IsVisible="{Binding ActionIsInProgess}" Color="Red" />

      </AbsoluteLayout>
    </Grid>
  </ContentPage.Content>
</local:BaseContentPage>
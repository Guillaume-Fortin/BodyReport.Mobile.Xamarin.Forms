<?xml version="1.0" encoding="UTF-8"?>
<local:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:local="clr-namespace:BodyReport" x:Class="BodyReport.EditTrainingWeekPage" x:Name="myPage"
			Title="Training week">
	<ContentPage.Content>
	<ScrollView>
		<TableView Intent="Settings" >
            <TableRoot>
                <TableSection Title="Create training Week">
                    <EntryCell HorizontalTextAlignment="Start" Label="Year"  Keyboard="Numeric" Placeholder="Edit Data" Text="{Binding TrainingWeek.Year}"/>
                    <EntryCell HorizontalTextAlignment="Start" Label="Week number"  Keyboard="Numeric" Placeholder="Edit Data" Text="{Binding TrainingWeek.WeekOfYear}"/>
                    <EntryCell HorizontalTextAlignment="Start" Label="Height (cm)"  Keyboard="Numeric" Placeholder="Edit Data" Text="{Binding TrainingWeek.UserHeight}"/>
                    <EntryCell HorizontalTextAlignment="Start" Label="Weight (cm)"  Keyboard="Numeric" Placeholder="Edit Data" Text="{Binding TrainingWeek.UserWeight}"/>
                </TableSection>
            </TableRoot>
        </TableView>
		</ScrollView>
	</ContentPage.Content>
</local:BaseContentPage>

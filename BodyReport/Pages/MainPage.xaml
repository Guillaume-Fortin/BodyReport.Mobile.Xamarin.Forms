					   xmlns:local="clr-namespace:BodyReport" x:Class="BodyReport.MainPage"
					   Title="{Binding TitleLabel}">

  <ContentPage.BackgroundColor>
    <OnPlatform x:TypeArguments="Color"
                iOS="#6DBEE3"/>
  </ContentPage.BackgroundColor>
  
	<ContentPage.Content>
		<TableView x:Name="tableView" Intent="Settings" HasUnevenRows="true" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <TableRoot>
                <TableSection Title="{Binding MenuLabel}">
                	<local:TouchViewCell x:Name="TrainingJournalCell" Tapped="OnCellTapped" 
                		Value="{Binding TrainingJournalLabel}"
                		IsIndicatorVisible="true" />
                </TableSection>
                <TableSection Title="{Binding ConfigurationLabel}">
                	<local:TouchViewCell x:Name="ChangeLanguageCell" Tapped="OnCellTapped" 
                		Value="{Binding ChangeLanguageLabel}"
                		Image="{Binding LanguageFlagImageSource}"
                		IsImageVisible="true"
                		IsIndicatorVisible="true" />
                </TableSection>
            </TableRoot>
